# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                          controllers.Application.main(any = "none")

POST    /app/logar                 controllers.AutenticacaoController.postLogin()
POST    /app/testaFoto              controllers.Application.testaFoto()

POST    /app/cadastrar             controllers.AutenticacaoController.postCadastro()

POST    /app/buscarCaronas/:id     controllers.BuscaController.buscarCarona(id : Long)

GET     /app/getUsers              controllers.UsuarioController.getAllCadastro()

GET     /app/solicitacoesCarona/:id    controllers.SolicitacaoController.getSolicitacoesCaronas(id : Long)

POST    /app/logout                controllers.UsuarioController.logout()

GET    /app/caronasMotorista      controllers.MotoristaController.getCaronasComoMotoristas()
GET    /app/caronasPassageiro      controllers.PassageiroController.getCaronasComoPassageiro()

POST    /app/salvarCarona          controllers.CaronaController.postCaronas()

POST    /app/solicitarCarona        controllers.SolicitacaoController.solicitarCarona()

POST    /app/aceitarCarona          controllers.SolicitacaoController.aceitarCarona()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
#GET     /*any                      controllers.Application.main(any)