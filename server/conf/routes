# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          controllers.Application.main(any = "none")


GET     /views/index               controllers.Application.index()
POST    /app/logar                 controllers.Application.postLogin()


POST    /app/cadastrar             controllers.Application.postCadastro()
POST    /app/buscarCaronas/:id         controllers.Application.buscarCarona(id : Long)

GET     /app/getUsers              controllers.Application.getAllCadastro()
GET     /app/pedidosCaronas/:id    controllers.Application.getPedidosCaronas(id : Long)

POST    /app/logout                controllers.Application.logout()
POST    /app/caronas               controllers.Application.getCaronasMotoristasUsuario()
POST    /app/salvarCarona          controllers.Application.postCaronas()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
GET     /*any                      controllers.Application.main(any)