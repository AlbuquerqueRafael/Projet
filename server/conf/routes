# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                          controllers.Application.main(any = "none")

POST    /app/logar                 controllers.AutenticacaoController.postLogin()


POST    /app/cadastrar             controllers.AutenticacaoController.postCadastro()

POST    /app/buscarCaronas/:id     controllers.BuscaController.buscarCarona(id : Long)

GET     /app/getUsers              controllers.UsuarioController.getAllCadastro()

GET     /app/pedidosCaronas/:id    controllers.MotoristaController.getPedidosCaronas(id : Long)

POST    /app/logout                controllers.UsuarioController.logout()

POST    /app/caronas               controllers.MotoristaController.getCaronasMotoristasUsuario()

POST    /app/salvarCarona          controllers.CaronaController.postCaronas()

POST    /app/solicitarCarona        controllers.CaronaController.solicitarCarona()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
#GET     /*any                      controllers.Application.main(any)